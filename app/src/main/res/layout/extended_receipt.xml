<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#2B2B2B">

    <TextView
        android:id="@+id/textView10"
        android:layout_width="304dp"
        android:layout_height="206dp"
        android:gravity="center"
        android:text="Яйцо - 3 шт. Помидоры - 300 г; Перец красный сладкий - 1/2 шт; Лук репчатый - 100 г; Перец чили - 1 шт; Чеснок - 10 г; Мякоть томатов (протёртая) - 200 мл; Паприка сладкая молотая - 1 ст. ложка; Соль - 1/2 ч. ложки; Перец чёрный молотый - 1/2 ч. ложки; Сахар - 1 ст. ложка; Масло растительное - 1 ст. ложка; Петрушка свежая - 5 г."
        android:textColor="#FF9100"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.485"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="HardcodedText,MissingConstraints,TextSizeCheck,VisualLintBounds,VisualLintOverlap"
        tools:layout_editor_absoluteY="337dp" />

    <TextView
        android:id="@+id/textView20"
        android:layout_width="371dp"
        android:layout_height="322dp"
        android:gravity="center"
        android:text="1. Помидоры нарезать кубиками. 2.  Сладкий перец нарезать тонкой соломкой 3. Лук нарезать таким же способом 4. Чеснок нарезать мелкими кубиками, красный перец чили - тонкими кольцами 5. На разогретую сковороду налить растительное масло. Обжарить чеснок и перец чили в течение 30 секунд 6. Добавить нарезанные помидоры, лук, болгарский перец и жарить 2 минуты на среднем огне. 7. Добавить протёртую мякоть томатов и перемешать. Тушить на слабом огне 10 минут. 8. Добавить все специи и перемешать. Готовить ещё 3 минуты на среднем огне. 9. Столовой ложкой или лопаткой развдинуть тушеные овощи и влить куриные яйца. 10. Продолжать жарить на небольшом огне примерно 4 минуты. Готово!"
        android:textColor="#FF9100"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.485"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="HardcodedText,MissingConstraints,TextSizeCheck,VisualLintBounds,VisualLintOverlap"
        tools:layout_editor_absoluteY="590dp" />

    <TextView
        android:id="@+id/textView19"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="540dp"
        android:text="Шаги приготовления"
        android:textColor="#00BCD4"
        android:textSize="34sp"
        android:textStyle="bold|italic"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="HardcodedText,VisualLintOverlap" />

    <TextView
        android:id="@+id/textView18"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="232dp"
        android:text="Рецепт &quot;Шакшука&quot;"
        android:textColor="#00BCD4"
        android:textSize="34sp"
        android:textStyle="bold|italic"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.557"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="HardcodedText" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="292dp"
        android:text="Ингридиенты"
        android:textColor="#00BCD4"
        android:textSize="34sp"
        android:textStyle="bold|italic"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.535"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="HardcodedText,VisualLintOverlap" />

    <ImageView
        android:id="@+id/imageView8"
        android:layout_width="292dp"
        android:layout_height="232dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.504"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/shakshuka2"
        tools:ignore="ContentDescription,MissingConstraints" />

    <ScrollView
        android:layout_width="399dp"
        android:layout_height="630dp"
        tools:ignore="MissingConstraints,SpeakableTextPresentCheck"
        tools:layout_editor_absoluteX="9dp"
        tools:layout_editor_absoluteY="281dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            tools:ignore="UselessLeaf" />
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>