<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#2B2B2B">

    <TextView
        android:id="@+id/textView10"
        android:layout_width="334dp"
        android:layout_height="305dp"
        android:gravity="center"
        android:text="Яйцо - 3 шт. Помидоры - 300 г; Перец красный сладкий - 1/2 шт; Лук репчатый - 100 г; Перец чили - 1 шт; Чеснок - 10 г; Мякоть томатов (протёртая) - 200 мл; Паприка сладкая молотая - 1 ст. ложка; Соль - 1/2 ч. ложки; Перец чёрный молотый - 1/2 ч. ложки; Сахар - 1 ст. ложка; Масло растительное - 1 ст. ложка; Петрушка свежая - 5 г."
        android:textColor="#FF9100"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView8"
        tools:ignore="HardcodedText,TextSizeCheck,VisualLintBounds" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="88dp"
        android:text="Рецепт &quot;Шакшука&quot;"
        android:textColor="#00BCD4"
        android:textSize="34sp"
        android:textStyle="bold|italic"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="HardcodedText" />

    <ImageView
        android:id="@+id/imageView8"
        android:layout_width="350dp"
        android:layout_height="350dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/shakshuka2"
        tools:layout_editor_absoluteY="148dp"
        tools:ignore="ContentDescription,MissingConstraints" />

</androidx.constraintlayout.widget.ConstraintLayout>